<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, orientation=landscape" />
  <title>Happy Birthday Khushi - HP Style</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      background-color: black;
    }

    video {
      position: absolute;
      width: 100vw;
      height: 100vh;
      object-fit: cover;
      top: 0;
      left: 0;
      z-index: 1;
      pointer-events: none;
    }

    #tap-indicator {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 2;
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.1);
      border: 2px solid #fff;
      animation: pulse 1.5s infinite;
      display: none;
      justify-content: center;
      align-items: center;
      color: white;
      font-family: 'Georgia', serif;
      text-align: center;
      pointer-events: auto;
    }

    @keyframes pulse {
      0% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
      }
      50% {
        transform: translate(-50%, -50%) scale(1.1);
        opacity: 0.8;
      }
      100% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
      }
    }
  </style>
</head>
<body>

  <!-- Video containers -->
  <video id="rotateVideo" src="rotate.mp4" autoplay muted playsinline></video>
  <video id="doorVideo" src="door.mp4" muted playsinline loop style="display:none;"></video>
  <video id="hagridVideo" src="hagrid.mp4" playsinline style="display:none;"></video>

  <!-- Tap indicator -->
  <div id="tap-indicator">Tap<br>to Open</div>

  <script>
    const rotateVideo = document.getElementById('rotateVideo');
    const doorVideo = document.getElementById('doorVideo');
    const hagridVideo = document.getElementById('hagridVideo');
    const tapIndicator = document.getElementById('tap-indicator');

    // When rotate.mp4 ends, fade into door.mp4
    rotateVideo.addEventListener('ended', () => {
      rotateVideo.style.display = 'none';
      doorVideo.style.display = 'block';
      doorVideo.play();
      tapIndicator.style.display = 'flex';
    });

    // Tap interaction
    tapIndicator.addEventListener('click', () => {
      tapIndicator.style.display = 'none';
      doorVideo.style.display = 'none';
      hagridVideo.style.display = 'block';
      hagridVideo.play();
    });

    // Prevent videos from pausing on touch
    [rotateVideo, doorVideo, hagridVideo].forEach(video => {
      video.addEventListener('touchstart', (e) => {
        e.preventDefault();
      }, { passive: false });
    });

    // Ensure videos autoplay smoothly
    window.addEventListener('load', () => {
      rotateVideo.play();
    });
  </script>
</body>
</html>
